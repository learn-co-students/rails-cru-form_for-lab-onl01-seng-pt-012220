<h1>Song: <%= @song.name %></h1>
<% if @song.artist %>
  <h3>Artist: <%= link_to @song.artist.name, artist_path(@song.artist) %></h3>
<% else %>
  <h3>Artist: Unknown</h3>
<% end %>

<% if @song.genre %>
  <h3>Genre: <%= link_to @song.genre.name, genre_path(@song.genre) %></h3>
<% else %>
  <h3>Genre: Unknown</h3>
<% end %>



<%= link_to "Edit Song", edit_song_path(@song) %>